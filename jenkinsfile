pipeline {
    agent any

    tools {
        nodejs "nodejs" // Adapter si besoin
        sonarQubeScanner 'SonarQubeScanner' // Assure-toi que ce nom est celui défini dans Jenkins
    }

    environment {
        CI = 'false' // désactive le fail on warning pour React
    }

    stages {
        stage('Install Dependencies') {
            parallel {
                stage('Install Server') {
                    steps {
                        dir('server') {
                            sh 'npm install'
                        }
                    }
                }
                stage('Install Client') {
                    steps {
                        dir('client') {
                            sh 'npm install'
                        }
                    }
                }
            }
        }

        stage('SonarQube Analysis') {
            parallel {
                stage('SonarQube Server') {
                    steps {
                        dir('server') {
                            script {
                                def scannerHome = tool 'scanner'
                                withSonarQubeEnv('SonarQube') {
                                    sh "${scannerHome}/bin/sonar-scanner"
                                }
                            }
                        }
                    }
                }

                stage('SonarQube Client') {
                    steps {
                        dir('client') {
                            script {
                                def scannerHome = tool 'scanner' 
                                withSonarQubeEnv('SonarQube') {
                                    sh "${scannerHome}/bin/sonar-scanner"
                                }
                            }
                        }
                    }
                }
            }
        }

        stage('Build Application') {
            parallel {
                stage('Build Server') {
                    steps {
                        dir('server') {
                            sh 'npm run build || true' // continue même avec warnings
                        }
                    }
                }

                stage('Build Client') {
                    steps {
                        dir('client') {
                            sh 'npm run build || true'
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            echo '✅ Pipeline terminé'
        }
        failure {
            echo '❌ Pipeline échoué'
        }
    }
}
