pipeline {
    agent any

    tools {
        nodejs "nodejs" // Adjust as necessary
    }

    environment {
        CI = 'false' // Disable fail on warning for React
    }

    stages {
        stage('Install Dependencies') {
            parallel {
                stage('Install Server') {
                    steps {
                        dir('server') {
                            sh 'npm install'
                        }
                    }
                }
                stage('Install Client') {
                    steps {
                        dir('client') {
                            sh 'npm install'
                        }
                    }
                }
            }
        }

        stage('Build Application') {
            parallel {
                stage('Build Server') {
                    steps {
                        dir('server') {
                            sh 'npm run build || true'
                        }
                    }
                }

                stage('Build Client') {
                    steps {
                        dir('client') {
                            sh 'npm run build '
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            echo '✅ Pipeline completed'
        }
        failure {
            echo '❌ Pipeline failed'
        }
    }
}