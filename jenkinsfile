pipeline {
    agent any

    tools {
        nodejs "nodejs"
    }

    environment {
        CI = 'false'
        registryCredentials = "nexus"
        registry = "192.168.33.10:8083"
    }

    stages {
        // === Étapes facultatives ignorées pour gagner du temps ===
        
        stage('Install Dependencies') {
            parallel {
                stage('Install Server') {
                    steps {
                        dir('server') {
                            sh 'npm install'
                        }
                    }
                }
                stage('Install Client') {
                    steps {
                        dir('client') {
                            sh 'npm install'
                        }
                    }
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'sonar'
                    withSonarQubeEnv('sonar') {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
        

        stage('Build Backend Image') {
            steps {
                script {
                    sh 'docker-compose build backend'
                }
            }
        }

        stage('Deploy to Nexus') {
            steps {
                script {
                    docker.withRegistry("http://${registry}", registryCredentials) {
                        sh 'docker push $registry/docker-repo/mern-backend:1.0'
                    }
                }
            }
        }

        stage('Clean Backend') {
            steps {
                script {
                    sh '''
                        docker stop backend || true
                        docker rm -f backend || true
                        docker rmi $registry/docker-repo/mern-backend:1.0 || true
                    '''
                }
            }
        }

        stage('Run Backend') {
            steps {
                script {
                    docker.withRegistry("http://${registry}", registryCredentials) {
                        sh '''
                            docker pull $registry/docker-repo/mern-backend:1.0
                            docker-compose up -d backend
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            echo '✅ Pipeline terminé'
        }
        failure {
            echo '❌ Pipeline échoué'
            sh 'docker logs backend || true'
        }
    }
}
