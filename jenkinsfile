pipeline {
    agent any

    tools {
        nodejs "nodejs" // Adjust as necessary
        sonarScanner 'SonarQube Scanner' // Ensure this matches the name in Jenkins
    }

    environment {
        CI = 'false' // Disable fail on warning for React
    }

    stages {
        stage('Install Dependencies') {
            parallel {
                stage('Install Server') {
                    steps {
                        dir('server') {
                            sh 'npm install'
                        }
                    }
                }
                stage('Install Client') {
                    steps {
                        dir('client') {
                            sh 'npm install'
                        }
                    }
                }
            }
        }

        stage('SonarQube Analysis') {
            parallel {
                stage('SonarQube Server') {
                    steps {
                        dir('server') {
                            script {
                                def scannerHome = tool 'SonarQube Scanner'
                                withSonarQubeEnv('SonarQube') {
                                    sh "${scannerHome}/bin/sonar-scanner"
                                }
                            }
                        }
                    }
                }

                stage('SonarQube Client') {
                    steps {
                        dir('client') {
                            script {
                                def scannerHome = tool 'SonarQube Scanner'
                                withSonarQubeEnv('SonarQube') {
                                    sh "${scannerHome}/bin/sonar-scanner"
                                }
                            }
                        }
                    }
                }
            }
        }

        stage('Build Application') {
            parallel {
                stage('Build Server') {
                    steps {
                        dir('server') {
                            sh 'npm run build || true'
                        }
                    }
                }

                stage('Build Client') {
                    steps {
                        dir('client') {
                            sh 'npm run build || true'
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            echo '✅ Pipeline completed'
        }
        failure {
            echo '❌ Pipeline failed'
        }
    }
}